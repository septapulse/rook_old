<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>distribution</id>
	<formats>
		<format>dir</format>
		<format>zip</format>
	</formats>
	<dependencySets>
		<dependencySet>
			<outputDirectory>/lib</outputDirectory>
			<includes>
				<include>org.slf4j:slf4j-log4j12</include>
				<include>log4j:log4j</include>
			</includes>
		</dependencySet>
	</dependencySets>
	<fileSets>
		<fileSet>
			<directory>${basedir}/dist</directory>
			<outputDirectory>/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${basedir}/../core/disruptor-router/dist</directory>
			<outputDirectory>/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${basedir}/../core/io-service/dist</directory>
			<outputDirectory>/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${basedir}/../examples/example-led-service/dist</directory>
			<outputDirectory>/</outputDirectory>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>${basedir}/../../LICENSE</source>
			<outputDirectory>/</outputDirectory>
		</file>
		<file>
			<source>${basedir}/../api/target/api.jar</source>
			<outputDirectory>/lib/</outputDirectory>
		</file>
		<file>
			<source>${basedir}/../core/disruptor-router/target/disruptor-router.jar</source>
			<outputDirectory>/lib/</outputDirectory>
		</file>
		<file>
			<source>${basedir}/../core/io-service/target/io-service.jar</source>
			<outputDirectory>/lib/</outputDirectory>
		</file>
		<file>
			<source>${basedir}/../examples/example-led-service/target/example-led-service.jar</source>
			<outputDirectory>/lib/</outputDirectory>
		</file>
	</files>
</assembly>